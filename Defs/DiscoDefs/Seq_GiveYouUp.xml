<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <RimForge.DiscoSequenceDef ParentName="RF_BDS">
    <defName>RF_S_GiveYouUp</defName>

    <weight>0.3</weight>
    <minFloorSize>(20, 20)</minFloorSize>

    <actions>

      <!-- Clear -->
      <li>
        <type>Clear</type>
      </li>

      <!-- Rick base, put in memory -->
      <li>
        <type>Start</type>
        <program>RF_DP_Video_GiveYouUp_Small</program>
        <addToMemory>true</addToMemory>
      </li>

      <!-- Noisy green instead of video white -->
      <li>
        <type>Add</type>
        <blend>Multiply</blend>
        <program>RF_DP_Noise_VeryLight</program>
      </li>
      <li>
        <type>Add</type>
        <blend>Multiply</blend>
        <program>RF_DP_Cycle_Radioactive</program>
      </li>

      <!-- Wait for the video to end -->
      <li>
        <type>WaitMem</type>
      </li>
      
    </actions>
  </RimForge.DiscoSequenceDef>

</Defs>