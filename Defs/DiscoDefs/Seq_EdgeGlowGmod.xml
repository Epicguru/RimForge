<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <RimForge.DiscoSequenceDef ParentName="RF_BDS">
    <defName>RF_S_EdgeGlowGmod</defName>
    <actions>

      <!-- Add edge with noise -->
      <li>
        <type>Start</type>
        <program>RF_DP_EdgeDefault</program>
      </li>
      <li>
        <type>Add</type>
        <program>RF_DP_Noise_VeryLight</program>
      </li>   
      
      <!-- Gmod dance because I can -->
      <li>
        <type>Add</type>
        <program>RF_DP_Video_Gmod_Small</program>
        <onlyIfMeetsSize>true</onlyIfMeetsSize>
        <oneMinus>true</oneMinus>
        <blend>Add</blend>
      </li>

      <!-- All w random color cycle -->
      <li>
        <type>Add</type>
        <randomProgramFrom>
          <li>RF_DP_Cycle_Vapourwave</li>
          <li>RF_DP_Cycle_Radioactive</li>
          <li>RF_DP_Cycle_Pastel</li>
          <li>RF_DP_Cycle_Neon</li>
        </randomProgramFrom>
      </li>      

      <!-- Fade it in -->
      <li>
        <type>Add</type>
        <program>RF_DP_FadeIn</program>
      </li>
      <li>
        <type>WaitLast</type>
      </li>

      <!-- Wait then fade out -->
      <li>
        <type>Wait</type>
        <ticks>1000</ticks>
      </li>
      <li>
        <type>Add</type>
        <program>RF_DP_FadeOut</program>
      </li>
      <li>
        <type>WaitLast</type>
      </li>
      
    </actions>
  </RimForge.DiscoSequenceDef>

</Defs>