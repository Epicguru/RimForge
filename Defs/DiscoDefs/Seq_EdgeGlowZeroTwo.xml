<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <RimForge.DiscoSequenceDef ParentName="RF_BDS">
    <defName>RF_S_EdgeGlowZeroTwo</defName>
    <actions>

      <!-- Put zero two in there. -->
      <li>
        <type>Start</type>
        <program>RF_DP_ColorVideo_ZeroTwo_Small</program>
        <addToMemory>true</addToMemory>
      </li>   
      <li>
        <type>Add</type>
        <program>RF_DP_EdgeVolume</program>
        <tint>(255, 0, 212, 150)</tint>
        <blend>Add</blend>
      </li>

      <!-- Fade it in -->
      <li>
        <type>Add</type>
        <program>RF_DP_FadeIn</program>
      </li>
      <li>
        <type>WaitLast</type>
      </li>

      <!-- Wait for whole song -->
      <li>
        <type>WaitMem</type>
      </li>
      
    </actions>
  </RimForge.DiscoSequenceDef>

</Defs>