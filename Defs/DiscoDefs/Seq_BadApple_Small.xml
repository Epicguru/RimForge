<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <RimForge.DiscoSequenceDef ParentName="RF_BDS">
    <defName>RF_S_BadApple_Small</defName>

    <minResolution>(20, 20)</minResolution>
    <prefer>
      <li>RF_S_BadApple_Large</li>
    </prefer>

    <actions>

      <!-- Clear -->
      <li>
        <type>Clear</type>
      </li>

      <!-- Bad apple base, put in memory -->
      <li>
        <type>Start</type>
        <program>RF_DP_Video_BadApple_Small</program>
        <addToMemory>true</addToMemory>
      </li>

      <!-- Noisy pastel colors instead of video white -->
      <li>
        <type>Add</type>
        <blend>Multiply</blend>
        <program>RF_DP_Noise_VeryLight</program>
      </li>
      <li>
        <type>Add</type>
        <blend>Multiply</blend>
        <program>RF_DP_Cycle_Pastel</program>
      </li>

      <!-- Wait for the video to end -->
      <li>
        <type>WaitMem</type>
      </li>
      
    </actions>
  </RimForge.DiscoSequenceDef>

</Defs>